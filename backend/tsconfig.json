{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs", // Express uses CommonJS usually, or ES modules with ts-node.
        "lib": [
            "es2020",
            "dom"
        ], // dom needed for some langchain defaults maybe? or cheerio types?
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}